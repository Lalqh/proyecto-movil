<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blanco_naranja_down"
    tools:context=".VentaInfoActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDeleteCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/naranja_rojo_web"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="312dp"
        android:background="@drawable/spinner_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Sale ID -->
        <TextView
            android:id="@+id/tvSaleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ID Venta: 12345"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Product Folio -->
        <TextView
            android:id="@+id/tvProductFolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Folio Producto: ABCD1234"
            android:textSize="24sp" />

        <!-- Sale Date -->
        <TextView
            android:id="@+id/tvSaleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Fecha de Venta: 2024-06-08"
            android:textSize="24sp" />

        <!-- Payment Method -->
        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Método de Pago: Tarjeta"
            android:textSize="24sp" />

        <!-- User Information -->
        <TextView
            android:id="@+id/tvUserTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Usuario: Juan Pérez"
            android:textSize="24sp" />

        <!-- Total Sale -->
        <TextView
            android:id="@+id/tvTotalTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Total Venta: $1234.56"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>