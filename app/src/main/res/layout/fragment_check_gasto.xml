<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gasto.consultar.CheckGastoFragment">



    <ImageView
        android:id="@+id/ivLogoGastoList"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerProvedorGasto"
        android:layout_width="393dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bordes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoGastoList" />

    <ScrollView
        android:layout_width="389dp"
        android:layout_height="511dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearchGasto"
        app:layout_constraintVertical_bias="0.147">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pbLoopGasto"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/gasto1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bordes"
                android:drawableLeft="@drawable/baseline_arrow_right_24"
                android:text="gasto example-something about"
                android:textColor="@color/white"
                tools:drawableLeft="@drawable/baseline_arrow_right_24" />

            <TextView
                android:id="@+id/gasto2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bordes"
                android:drawableLeft="@drawable/baseline_arrow_right_24"
                android:text="gasto example-something about"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gasto3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bordes"
                android:drawableLeft="@drawable/baseline_arrow_right_24"
                android:text="gasto example-something about"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gasto4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bordes"
                android:drawableLeft="@drawable/baseline_arrow_right_24"
                android:text="gasto example-something about"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gasto5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bordes"
                android:drawableLeft="@drawable/baseline_arrow_right_24"
                android:text="gasto example-something about"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gasto6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bordes"
                android:drawableLeft="@drawable/baseline_arrow_right_24"
                android:text="gasto example-something about"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gasto7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bordes"
                android:drawableLeft="@drawable/baseline_arrow_right_24"
                android:text="gasto example-something about"
                android:textColor="@color/white" />




        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/etSearchGasto"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/baseline_find_in_page_24"
        android:ems="10"
        android:hint="buscar"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProvedorGasto" />

    <TextView
        android:id="@+id/textDefProvedorSpinner"
        android:layout_width="112dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:text="Provedor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivLogoGastoList"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
