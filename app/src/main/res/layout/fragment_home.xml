<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blanco_naranja_down"
    tools:context=".ui.home.HomeFragment" >

    <TextView
        android:id="@+id/textHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/titleDestacados"
        android:layout_width="304dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:background="@drawable/spinner_border"
        android:text="Productos Destacados"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/titleNormales"
        android:layout_width="304dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_border"
        android:text="Catalogo"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewDestacados" />

    <HorizontalScrollView
        android:id="@+id/scrollViewDestacados"
        android:layout_width="402dp"
        android:layout_height="248dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleDestacados">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img1" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img2" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img3" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img4" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img5" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/scrollViewNormales"
        android:layout_width="402dp"
        android:layout_height="248dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleNormales">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivNormal1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img6" />

            <ImageView
                android:id="@+id/imageNormal2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img7" />

            <ImageView
                android:id="@+id/imageNormal3"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img8" />

            <ImageView
                android:id="@+id/imageNormal4"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img9" />

            <ImageView
                android:id="@+id/imageNormal5"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img10" />

            <ImageView
                android:id="@+id/imageNormal6"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img11" />

            <ImageView
                android:id="@+id/imageNormal7"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img12" />

            <ImageView
                android:id="@+id/imageNormal8"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/img13" />
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>