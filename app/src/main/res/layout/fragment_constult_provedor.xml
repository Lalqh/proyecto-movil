<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.provedor.consult.ConstultProvedorFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProvedores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearchProvedor" />

    <ImageView
        android:id="@+id/ivLogoProvedorSearch"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSearchProvedor"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/baseline_find_in_page_24"
        android:ems="10"
        android:hint="buscar"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoProvedorSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>