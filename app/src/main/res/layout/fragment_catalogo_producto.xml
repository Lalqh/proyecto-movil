<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.producto.catalogo.CatalogoProductoFragment">


    <ImageView
        android:id="@+id/ivLogoVentas"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="89dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="categoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoVentas" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="393dp"
        android:layout_height="50dp"
        android:background="@drawable/bordes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ScrollView
        android:layout_width="388dp"
        android:layout_height="495dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pbLoop"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="1dp"
                android:layout_marginTop="5dp"



                android:src="@drawable/img1"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"
                app:layout_constraintVertical_bias="0.77"
                app:shapeAppearanceOverlay="@style/semiCircular"
                app:strokeColor="@color/melocoton"
                android:background="@drawable/naranja_rojo_web"
                app:strokeWidth="10dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen2"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/naranja_rojo_web"


                android:src="@drawable/img2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.724"
                app:layout_constraintVertical_bias="0.77"
                app:shapeAppearanceOverlay="@style/semiCircular"
                app:strokeColor="@color/melocoton"
                app:strokeWidth="10dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen3"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="1dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/img3"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"

                app:layout_constraintVertical_bias="0.77"
                app:shapeAppearanceOverlay="@style/semiCircular"
                app:strokeColor="@color/melocoton"
                android:background="@drawable/naranja_rojo_web"
                app:strokeWidth="10dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen4"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="1dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/img4"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"

                app:layout_constraintVertical_bias="0.77"
                app:shapeAppearanceOverlay="@style/semiCircular"
                app:strokeColor="@color/melocoton"
                android:background="@drawable/naranja_rojo_web"
                app:strokeWidth="10dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen5"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="1dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/img5"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"

                app:layout_constraintVertical_bias="0.77"
                app:shapeAppearanceOverlay="@style/semiCircular"
                app:strokeColor="@color/melocoton"
                android:background="@drawable/naranja_rojo_web"
                app:strokeWidth="10dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen6"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="1dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/img6"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"

                app:layout_constraintVertical_bias="0.77"
                app:shapeAppearanceOverlay="@style/semiCircular"
                app:strokeColor="@color/melocoton"
                android:background="@drawable/naranja_rojo_web"
                app:strokeWidth="10dp" />

        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/baseline_find_in_page_24"
        android:ems="10"
        android:hint="buscar"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />
</androidx.constraintlayout.widget.ConstraintLayout>
